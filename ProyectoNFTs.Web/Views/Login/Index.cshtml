@model ProyectoNFTs.Web.ViewModels.ViewModelLogin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCAjax.styles.css" asp-append-version="true" />
    <!-- Toast-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <!-- SweetAlert-->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.4/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- Add Bootstrap Icons Support! -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body id="MyBody">
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-xl-4 ">
                <div class="card bg-black">
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <img src="~/Images/Logo.png" alt="Alternate Text" style="width:220px;height:220px;" />                           
                        </div>
                        <form asp-controller="Login" asp-action="LogIn" method="post" asp-antiforgery="true">
                            <div class="form-group">
                                <label asp-for="User" class="control-label" placeholder="Usuario" style="font-family:Gadugi"></label>
                                <input asp-for="User" class="form-control" type="text" autocomplete="true" placeholder="Ingrese usuario" />
                                <span asp-validation-for="User" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label" placeholder="Contraseña" style="font-family:Gadugi"></label>
                                <input asp-for="Password" class="form-control" type="password" autocomplete="false" placeholder="Ingrese contraseña" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2 mb-3 mt-2">
                                <button class="btn btn-primary" style="margin-top:10px;font-family:Gadugi;" type="submit" onclick="spinnerEffect()">Iniciar Sesión</button>
                            </div>
                            @if (@ViewBag.Message != null)
                            {
                                <div class="form-group">
                                    <div id="message" class="alert alert-danger" role="alert" style="font-family:Gadugi">
                                        @ViewBag.Message
                                    </div>
                                </div>
                            }

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Div para spinner -->
    <div id="loader" class="loadingXXXX" style="width: 3rem; height: 3rem;" role="status">
    </div>


    <script type="text/javascript">
        function spinnerEffect() {
            console.log("spinnerEffect")
            document.getElementById("loader").innerHTML = ""
            document.getElementById("loader").className = "loading";
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Ajax unobtrusive-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js" integrity="sha512-f04GBpoqEZhbyjlRTuXeg8FIHDb+xfCJ0LVdqiN1fEl5B3jz3Z0SPe9IxDumOVdTeeXmKMcMJhb26VuGf1Laqw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Toast-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- SweetAlert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.4/dist/sweetalert2.all.min.js"></script>

</body>
</html>